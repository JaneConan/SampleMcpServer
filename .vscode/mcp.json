{
  "inputs": [
    {
      "type": "promptString",
      "id": "weather_choices",
      "description": "Comma separated list of weather descriptions to randomly select.",
      "password": false
    }
  ],
  "servers": {
    "ConanYao.SampleMcpServer": {
      "type": "stdio",
      "command": "dnx",
      "args": [
        "ConanYao.SampleMcpServer", 
        "--version",
        "0.1.0",
        "--yes"
      ],
      "env": {
        "WEATHER_CHOICES": "${input:weather_choices}"
      }
    }
  }
}